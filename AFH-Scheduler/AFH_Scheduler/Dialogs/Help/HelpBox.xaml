<UserControl x:Class="AFH_Scheduler.Dialogs.Help.HelpBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AFH_Scheduler.Dialogs.Help"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>
    
    <StackPanel Orientation="Horizontal" Width="800" Height="500">
        <StackPanel Margin="10 10 10 10" Width="200" Orientation="Vertical">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Button
                    Grid.Row="0"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainKeyCommand}"
                    CommandParameter="Main"
                    ToolTip="Load Main Table Explaination">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MaterialDesignRaisedLightButton}" TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=HomeButtonsOn}" Value="false"/>
                                        <Condition Binding="{Binding Path=SubButtonsMainOn}" Value="false"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>                        
                    </Button.Style>Main Table</Button>

                <Button  Visibility="{Binding SubButtonsMainOn, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    Grid.Row="1"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Complete Inspection"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Load Complete Inspection Explaination">Complete Inspection</Button>

                <Button  Visibility="{Binding SubButtonsMainOn, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    Grid.Row="2"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Home History"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Load Home History Explaination">Home History</Button>

                <Button
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainKeyCommand}"
                    CommandParameter="Add"
                    ToolTip="Load Adding Homes Explaination">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MaterialDesignRaisedLightButton}" TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Grid.Row" Value="1"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=HomeButtonsOn}" Value="false"/>
                                        <Condition Binding="{Binding Path=SubButtonsAddOn}" Value="false"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </MultiDataTrigger>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=SubButtonsAddOn}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Grid.Row" Value="0"/>
                                </MultiDataTrigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style> Adding new Homes</Button>

                <Button
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainKeyCommand}"
                    CommandParameter="Edit"
                    ToolTip="Load Editing Homes Explaination">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MaterialDesignRaisedLightButton}" TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Grid.Row" Value="2"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=HomeButtonsOn}" Value="false"/>
                                        <Condition Binding="{Binding Path=SubButtonsEditOn}" Value="false"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </MultiDataTrigger>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=SubButtonsEditOn}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Grid.Row" Value="0"/>
                                </MultiDataTrigger>
                                
                            </Style.Triggers>
                        </Style>
                    </Button.Style> Editing Homes</Button>

                <Button Visibility="{Binding SubButtonsEditOn, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Grid.Row="1"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Active Homes"
                    Style="{StaticResource MaterialDesignRaisedLightButton}"                    
                    ToolTip="Load Deactivate Homes Explaination">(In-)Active Homes</Button>

                <Button Visibility="{Binding SubButtonsEditOn, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Grid.Row="2"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Delete"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Load Delete Homes Explaination">Delete Homes</Button>

                <Button
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainKeyCommand}"
                    CommandParameter="Settings"
                    ToolTip="Load Setting Explaination">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MaterialDesignRaisedLightButton}" TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Grid.Row" Value="3"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=HomeButtonsOn}" Value="false"/>
                                        <Condition Binding="{Binding Path=SubButtonsSettingOn}" Value="false"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </MultiDataTrigger>

                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=SubButtonsSettingOn}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Grid.Row" Value="0"/>
                                </MultiDataTrigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style> Setting</Button>

                <Button Visibility="{Binding SubButtonsSettingOn, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Grid.Row="1"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Provider List"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Load Provider List Explaination">Provider List</Button>

                <Button Visibility="{Binding SubButtonsSettingOn, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Grid.Row="2"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Normal Curve"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Load Normal Curve Explaination">Normal Curve</Button>

                <Button
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainKeyCommand}"
                    CommandParameter="Import_Export"
                    ToolTip="Load Import/Export Explaination">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MaterialDesignRaisedLightButton}" TargetType="Button">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Setter Property="Grid.Row" Value="4"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=HomeButtonsOn}" Value="false"/>
                                        <Condition Binding="{Binding Path=SubButtonsImportOn}" Value="false"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Hidden"/>
                                </MultiDataTrigger>
                                
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=SubButtonsImportOn}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Grid.Row" Value="0"/>
                                </MultiDataTrigger>
                                
                            </Style.Triggers>
                        </Style>
                    </Button.Style> Import/Export</Button>
                
                <!--
                <Button Visibility="{Binding SubButtonsImportOn, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Grid.Row="5"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Import"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Load Import Explaination">Import</Button>

                <Button Visibility="{Binding SubButtonsImportOn, Converter={StaticResource BooleanToVisibilityConverter}}"
                    Grid.Row="6"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainSubKeyCommand}"
                    CommandParameter="Export"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Load Export Explaination">Export</Button>

                -->
                <Button Visibility="{Binding BackButtonOn, Converter={StaticResource BooleanToVisibilityConverter}}" 
                    Grid.Row="7"
                    Margin="0 0 0 20" 
                    FontSize="16"                    
                    Command="{Binding ExplainKeyCommand}"
                    CommandParameter="BackButton"
                    Style="{StaticResource MaterialDesignRaisedLightButton}" 
                    ToolTip="Back To Main Menu">Back</Button>
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="40 10 10 10">
            <TextBlock ScrollViewer.VerticalScrollBarVisibility="Auto" Width="520" Height="400" FontSize="16" Text="{Binding DialogMessage}" TextWrapping="Wrap"/>

            <Button 
                    IsCancel="True"
                    HorizontalAlignment="Right"
                    Command="{x:Static wpf:DialogHost.CloseDialogCommand}" 
                    Style="{StaticResource MaterialDesignFlatButton}" 
                    MaxWidth="100" Margin="10" 
                    ToolTip="Close Help Page" 
                    FontSize="14">
                <Button.CommandParameter>

                    <system:String>Cancel</system:String>

                </Button.CommandParameter>

                _CLOSE
            </Button>
        </StackPanel>

    </StackPanel>
</UserControl>
