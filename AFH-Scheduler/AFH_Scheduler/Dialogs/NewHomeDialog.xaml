<?xml version="1.0" encoding="utf-8" ?>
    <UserControl x:Class="AFH_Scheduler.Dialogs.NewHomeDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AFH_Scheduler.Dialogs"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             xmlns:wpf="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
             mc:Ignorable="d" >
               
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" FontSize="22" HorizontalAlignment="Center">Create A New Home</TextBlock>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Margin="10" FontSize="18" Grid.Column="0" Grid.Row="0">Provider:</TextBlock>
                <ComboBox FontSize="18"  Grid.Column="1" Grid.Row="0" ItemsSource="{Binding NewHomeCreated.Providers}" SelectedValue="{Binding NewHomeCreated.SelectedProviderName, UpdateSourceTrigger=PropertyChanged}"></ComboBox>
                <!-- <TextBox Text="{Binding NewHomeCreated.Provider, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="18" Grid.Column="1" Grid.Row="0" MinWidth="255"/>
            
            
            <TextBlock Margin="10" FontSize="18" Grid.Column="2" Grid.Row="0">Provider Name:</TextBlock>
            <TextBox Text="{Binding NewHomeCreated.ProviderName, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="18" Grid.Column="3" Grid.Row="0" MinWidth="255"/>
            -->

                <TextBlock Margin="10" FontSize="18" Grid.Column="0" Grid.Row="1">Home ID:</TextBlock>
                <TextBox Text="{Binding NewHomeCreated.HomeID, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="18" Grid.Column="1" Grid.Row="1" MinWidth="255"/>


                <TextBlock Margin="10" FontSize="18" Grid.Column="2" Grid.Row="1">Address:</TextBlock>
                <TextBox Text="{Binding NewHomeCreated.Address, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="18" Grid.Column="3" Grid.Row="1" MinWidth="255"/>

                <TextBlock Margin="10" FontSize="18" Grid.Column="0" Grid.Row="2">City:</TextBlock>
                <TextBox Text="{Binding NewHomeCreated.City, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="18" Grid.Column="1" Grid.Row="2" MinWidth="255"/>

                <TextBlock Margin="10" FontSize="18" Grid.Column="2" Grid.Row="2">Zipcode:</TextBlock>
                <TextBox Text="{Binding NewHomeCreated.Zipcode, UpdateSourceTrigger=PropertyChanged}" Margin="10" FontSize="18" Grid.Column="3" Grid.Row="2" MinWidth="255"/>

                <TextBlock Margin="10" FontSize="18" Grid.Column="0" Grid.Row="3">Inspection Date:</TextBlock>
                <DatePicker 
                    Grid.Column="1"
                    Grid.Row="3"
                    DisplayDateStart="2/1/2019"
                    SelectedDate="{Binding NewHomeCreated.InspectionDate, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="18"
                    Margin="10" 
                    MinWidth="100" 
                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}" />

            </Grid>
            <Grid Margin="30" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                    <ColumnDefinition Width="Auto" MinWidth="100"/>
                </Grid.ColumnDefinitions>

                <Button 
            Grid.Column="0"
            Name="SubmitButton" 
            IsDefault="True"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            Margin="10,0,10,1" 
            FontSize="18" 
            ToolTip="Resource name: MaterialDesignRaisedLightButton" 
            Width="100"
            Command="{x:Static wpf:DialogHost.CloseDialogCommand}">
                    _SUBMIT
                </Button>

                <Button 
                    IsCancel="True"
            Grid.Column="1"
            Command="{x:Static wpf:DialogHost.CloseDialogCommand}"
            Name="CancelNewHome" 
            Style="{StaticResource MaterialDesignRaisedLightButton}" 
            MaxWidth="100" Margin="10,0,11,0" 
            ToolTip="Resource name: MaterialDesignRaisedLightButton" 
            FontSize="14">
                    _CANCEL
                </Button>
            </Grid>
        </StackPanel>

</UserControl>
